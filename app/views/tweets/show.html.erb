<p id="notice"><%= notice %></p>

<p>
  <b>Annotation:</b>
  <%= @tweet.annotation %>
</p>

<p>
  <b>Annotator:</b>
  <%= @tweet.annotator %>
</p>

<p>
  <b>Datetime:</b>
  <%= @tweet.dateTime %>
</p>

<h2>Annotations</h2>
<% @tweet.annotations.each do |theannotation| %>
    <p>
        <b>Annotator:</b>
        <%= theannotation.annotator %>
    </p>

    <p>
        <b>Annotation:</b>
        <%= theannotation.annotationValue %>
    </p>
<% end %>



<h2>Please annotate this. Pretty please:</h2>
<%= form_for([@tweet, @tweet.annotations.build]) do |f| %>
    <div class="field">
        <%= f.label :annotator %><br />
        <%= f.text_field :annotator %>
    </div>
    <div class="field">
        <%= f.label :annotationValue %><br />
        <%= f.text_area :annotationValue %>
    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
    <% end %>


<%= link_to 'Edit', edit_tweet_path(@tweet) %> |
<%= link_to 'Back to tweets', tweets_path %>
