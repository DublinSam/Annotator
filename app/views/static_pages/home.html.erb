<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section> 
      </section>
    </aside>
    <div class="span8">
      <h3>Tweets to be annotated</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>
  <div class="center hero-unit">
    <h1>Twitter annotation study</h1>

    <h2>
      A study into the challenges of detecting sarcasm on twitter.
    </h2>

    <p>
      Would you like to participate in the study and help out? <br>Follow the link to find out more about what the study entails and how you can take part.
    </p>

    <%= link_to "Find out more", instructions_path, class: "btn btn-large btn-primary" %>
  </div>

<%= link_to image_tag("me_speech.png", alt: "me") %>
</div>
<% end %>